{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "allowJs": true,
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "strictPropertyInitialization": false,
      "rootDir": "./src",

      "typeRoots": ["./node_modules/@types", "./src/shared/@types"],

      "baseUrl": ".",
      "paths": {
        "@modules/*": ["./src/modules/*"],
        "@shared/*": ["./src/shared/*"],
        "@config/*": ["./src/config/*"]
      }
   },
   "include": ["./src"]
}
